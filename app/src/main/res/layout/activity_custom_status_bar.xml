<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_status_bar_test_page"
        tools:context=".CustomStatusBarActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/switch_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch status bar color" />

            <Button
                android:id="@+id/switch_immersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch immersion status bar" />

            <Button
                android:id="@+id/switch_action_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch action bar" />

        </LinearLayout>
    </RelativeLayout>
</layout>
